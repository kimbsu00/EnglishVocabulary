<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/linearlayout_border_3"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/testTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="2021-05-14  00:34:23 테스트 완료"
        android:textColor="#C89EC4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/testInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="문제 수 : 30\n정답 : 24\n오답 : 6"
        android:textColor="#807E7E"
        android:textSize="16sp" />
</LinearLayout>